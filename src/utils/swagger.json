{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "User Login API",
      "description": "API documentation for user login application",
      "license": {
        "name": "MIT"
      }
    },
    "basePath": "/api/users",
    "tags": [
      {
        "name": "Auth",
        "description": "Authentication API"
      }
    ],
    "paths": {
      "/oauth/facebook": {
        "get": {
          "tags": ["Facebook Auth"],
          "summary": "Authenticate user using facebook",
          "description": "Authenticate a user by facebook",
          "responses": {
            "200": {
              "description": "Successful login",
              "schema": {
                "type": "object",
                "properties": {
                  "user": {
                    "type": "object",
                    "properties": {
                      "_id": {
                        "type": "string"
                      },
                      "firstName": {
                        "type": "string"
                      },
                      "lastName": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "username": {
                        "type": "string"
                      },
                      "created": {
                        "type": "string"
                      },
                      "provider": {
                        "type": "string"
                      },
                      "__v": {
                        "type": "integer"
                      },
                      "fullName": {
                        "type": "string"
                      },
                      "id": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Invalid credentials",
              "schema": {
                "type": "object",
                "properties": {
                  "error": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
