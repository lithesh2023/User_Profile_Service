      "/logout": {
        "get": {
          "tags": ["Auth"],
          "summary": "Loggout user",
          "description": "Logging out user",
          "responses": {
            "200": {
              "description": "Successful logout",
              "schema": {
                "type": "string",
                "properties": {
                  "result" : "User successfully logged out"
                }
              }
            }
          }
        }
      },
      "/login": {
        "post": {
          "tags": ["Auth"],
          "summary": "Authenticate user",
          "description": "Authenticate a user by providing username and password",
          "parameters": [
            {
              "name": "user",
              "in": "body",
              "required": true,
              "description": "User credentials",
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Successful login",
              "schema": {
                "type": "object",
                "properties": {
                  "user": {
                    "type": "object",
